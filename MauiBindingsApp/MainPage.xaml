<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBindingsApp.MainPage">

    <StackLayout x:Name="stack">
        <!-- BindingContext -->
        <Label Text="{Binding Text}" BindingContext="{x:Reference entryAge}"/>
        <Entry x:Name="entryAge"/>

        <!-- Binding -->
        <Label Text="{Binding Source={x:Reference entryStreet}, Path=Text}"/>
        <Entry x:Name="entryStreet"/>
    </StackLayout>

    

</ContentPage>
