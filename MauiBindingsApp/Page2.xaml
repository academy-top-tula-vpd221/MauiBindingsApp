<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBindingsApp.Page2"
             Title="Page2">
    <!--BindingContext="{x:Reference entry1}"
    Text="{Binding Path=Text, Mode=TwoWay}"/>-->
    <VerticalStackLayout>
        <Entry x:Name="entry1" Margin="10" Text="hello world" />
        <Entry x:Name="entry2" Margin="10"
               Text="{Binding Source={x:Reference Name=entry1}, Path=Text, Mode=TwoWay}"/>
        <Label Text="{Binding Source={x:Reference Name=entry1}, Path=Text, StringFormat='Message from Entry: {0}' }"/>
    </VerticalStackLayout>
</ContentPage>