<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBindingsApp.Page3"
             xmlns:local="clr-namespace:MauiBindingsApp"
             Title="Page3">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:StringToColorConverter x:Key="colorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout WidthRequest="300">
        <Entry x:Name="txtColor"
               TextColor="{Binding Source={RelativeSource Self}, 
                                   Path=Text,
                                   Converter={StaticResource colorConverter} }"/>
        <Label x:Name="lblDate"
               TextColor="{Binding Source={x:Reference Name=txtColor }, 
                           Converter={StaticResource colorConverter},
                           Path=Text}"/>
        <DatePicker x:Name="datePicker"/>
    </VerticalStackLayout>
</ContentPage>